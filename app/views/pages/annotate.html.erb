<script>
content_holder = document.getElementById('citedPaper');
for(var i=0;i<content_holder.children.length;i++) {
  (function() {
	   var d = content_holder.children[i];
	   d.field = document.createElement("input");
	   d.field.type = 'checkbox';
	   d.field.name = 'testing';
		 d.field.style.display = 'none' // This line sets checkbox to hidden
	   d.appendChild(d.field);
	   d.onclick = function() {
		   if(!d.selected) {
			   d.style.backgroundColor = '#ffffaa'
			   d.selected = true;
			   d.field.checked = 'true'
		   }
		   else {
			   d.style.backgroundColor = '#f5f5f5'
			   d.selected = false;
			   d.field.checked = ''
		   }
	   }
   })();
}
</script>